<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cmu.QuizDroidFinal">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QuestionActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ResultActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NiveisActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PerfilActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RankingActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity android:name=".AdministracaoActivity"
            android:screenOrientation="portrait" />/>
        <activity android:name=".AdicionarActivity"
            android:screenOrientation="portrait" />/>
        <activity android:name=".QuestionActivityFacil"
            android:screenOrientation="portrait" />
        />
        <activity android:name=".QuestionActivityModerado"
            android:screenOrientation="portrait" />/>
        <activity android:name=".QuestionActivityDificil"
            android:screenOrientation="portrait" />/>
        <activity android:name=".PreferencesActivity"
            android:screenOrientation="portrait" />/>
        <activity android:name=".ResultWinActvity"
            android:screenOrientation="portrait" />/>
        <activity android:name=".VerPerguntasActivity"
            android:screenOrientation="portrait" />/>
        <activity android:name=".PerguntaDetalheActivity"
            android:screenOrientation="portrait" />/>
        <activity android:name=".AdicionarDificilActivity"
            android:screenOrientation="portrait" />/>
        <activity android:name=".EscolhaNivelActivity"
            android:screenOrientation="portrait" />/>
        <activity android:name=".AdicionarModeradoActivity"
            android:screenOrientation="portrait" />
        <receiver android:name=".Widget_pergunta">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_pergunta_info" />
        </receiver>

        <service
            android:name=".MyService"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>