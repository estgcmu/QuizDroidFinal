<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_nives"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#2c498c"
    tools:context="cmu.QuizDroidFinal.NiveisActivity">

    <Button
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_novo_jogo_facil"
        android:onClick="button_novo_jogo_facil"
        android:background="@drawable/button_style"
        android:gravity="center"
        android:textColor="#ffffff"
        android:text="Fácil" />

    <Button
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:id="@+id/button_novo_jogo_moderado"
        android:onClick="button_novo_jogo_moderado"
        android:text="Moderado"
        android:layout_below="@+id/button_novo_jogo_facil"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_style"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp" />

    <TextView
        android:text="Seleciona o nível em que pretendes jogar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:id="@+id/Texto"
        android:textSize="30sp"
        android:textColor="@color/bright_foreground_inverse_material_light" />

    <Button
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:id="@+id/button_novo_jogo_dificil"
        android:onClick="button_novo_jogo_dificil"
        android:text="Difícil"
        android:layout_marginTop="33dp"
        android:background="@drawable/button_style"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_below="@+id/button_novo_jogo_moderado"
        android:layout_alignLeft="@+id/button_novo_jogo_moderado"
        android:layout_alignStart="@+id/button_novo_jogo_moderado" />


</RelativeLayout>
