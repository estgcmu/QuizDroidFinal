<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cmu.QuizDroidFinal">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QuestionActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ResultActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NiveisActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PerfilActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RankingActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />

        <receiver android:name="layout.QuestionWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/question_widget_info" />
        </receiver>

        <activity android:name="layout.QuestionWidgetConfigureActivity">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>
        <activity android:name=".AdministracaoActivity" />
        <activity android:name=".AdicionarActivity" />
        <activity android:name=".QuestionActivityFacil" />
        <activity android:name=".QuestionActivityModerado" />
        <activity android:name=".QuestionActivityDificil" />
        <activity android:name=".PreferencesActivity" />
        <activity android:name=".ResultWinActvity" />
        <activity android:name=".VerPerguntasActivity" />
        <activity android:name=".PerguntaDetalheActivity" />
        <activity android:name=".AdicionarDificilActivity" />
        <activity android:name=".EscolhaNivelActivity" />
        <activity android:name=".AdicionarModeradoActivity"></activity>
    </application>

</manifest>