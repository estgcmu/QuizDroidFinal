<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_adicionar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#2c498c"
    tools:context="cmu.QuizDroidFinal.AdicionarActivity">

    <Button
        android:text="Adicionar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:id="@+id/button_adicionar"
        android:textColor="#ffffff"
        android:background="@drawable/button_style"
        android:onClick="inserir_pergunta"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="PERGUNTA"
        android:ems="20"
        android:id="@+id/editText_pergunta"
        android:layout_above="@+id/editText_opcao_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:textColor="#ffffff"/>

    <TextView
        android:text="Adicionar Pergunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:id="@+id/textView_label"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:textStyle="normal|bold"
        android:textColor="#ffffff"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Opção 3"
        android:ems="10"
        android:id="@+id/editText_opcao_3"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Opção 4"
        android:ems="10"
        android:layout_marginTop="13dp"
        android:id="@+id/editText_opcao_4"
        android:textColor="#ffffff"
        android:layout_below="@+id/editText_opcao_3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Opção 1"
        android:ems="10"
        android:id="@+id/editText_opcao_1"
        android:textColor="#ffffff"
        android:layout_above="@+id/editText_opcao_2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Opção Correta"
        android:ems="10"
        android:layout_marginTop="8dp"
        android:id="@+id/editText_opcao_correta"
        android:textColor="#ffffff"
        android:layout_below="@+id/editText_opcao_4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="DIFICULDADE"
        android:ems="10"
        android:layout_marginTop="8dp"
        android:id="@+id/editText_dif"
        android:textColor="#ffffff"
        android:layout_below="@+id/editText_opcao_correta"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Opção 2"
        android:ems="10"
        android:id="@+id/editText_opcao_2"
        android:textColor="#ffffff"
        android:layout_above="@+id/editText_opcao_3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
