<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="cmu.QuizDroidFinal.MainActivity"
    android:background="#2c498c">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/droidquiz_logo"
        android:id="@+id/imageView"
        android:layout_weight="0.16"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    </RelativeLayout>

    <Button
        android:id="@+id/button_novo_jogo"
        android:text="JOGAR"
        android:onClick="button_niveis"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/button_style"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="20.0sp"
    />


    <Button
        android:id="@+id/button_perfil"
        android:onClick="button_perfil"
        android:text="Perfil"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/button_style"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="20.0sp"
        />
    <Button
        android:id="@+id/button_ranking"
        android:onClick="button_ranking"
        android:text="Ranking"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="-48dp"
        android:background="@drawable/button_style"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="20.0sp"/>

    <Button
        android:id="@+id/button_administracao"
        android:onClick="button_administracao"
        android:text="Administração"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/button_style"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="20.0sp" />
</LinearLayout>
