<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_preferences"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#2c498c"
    tools:context="cmu.QuizDroidFinal.PreferencesActivity">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="@string/preferencia"
        android:textColor="#ffffff"
        android:textSize="30.0sp"
        android:id="@+id/textView" />

    <Button
        android:text="@string/menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="next"
        android:background="@drawable/button_style"
        android:id="@+id/next"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:hint="@string/introduzir_nick"
        android:textColorHint="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textUri|textPersonName"
        android:gravity="left"
        android:id="@+id/userName"
        android:textColor="#fff"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/textView2"
        android:textSize="20.0sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="@string/guardar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_style"
        android:textColor="#fff"
        android:onClick="save"
        android:id="@+id/save"
        android:layout_marginBottom="23dp"
        android:layout_above="@+id/next"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:text="@string/music_off"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_style"
        android:textColor="#fff"
        android:onClick="mute_"
        android:id="@+id/musica"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/save"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:text="@string/music_on"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_style"
        android:textColor="#fff"
        android:onClick="unmute"
        android:id="@+id/unmute"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/musica"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:hint="60"
        android:textColorHint="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textSize="20.0sp"
        android:id="@+id/tempoE"
        android:textColor="#fff"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="1dp" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="left"
        android:text="@string/nova_pergunta"
        android:textColor="#ffffff"
        android:textSize="20.0sp"
        android:id="@+id/textView3"
        android:textStyle="normal|bold"
        android:layout_below="@+id/userName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:gravity="left"
        android:text="@string/nick"
        android:textColor="#ffffff"
        android:textSize="20.0sp"
        android:id="@+id/textView2"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
