<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_administracao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#2c498c"
    tools:context="cmu.QuizDroidFinal.NiveisActivity">



    <TextView
        android:text="@string/administracao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:id="@+id/Texto"
        android:textSize="30sp"
        android:textColor="@color/bright_foreground_inverse_material_light" />
    <Button
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:id="@+id/button_atualizar"
        android:onClick="button_atualizar"
        android:text="@string/perguntas"
        android:layout_marginTop="70dp"
        android:background="@drawable/button_style"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_below="@+id/Texto"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_adicionar"
        android:onClick="button_adicionar"
        android:layout_below="@+id/button_atualizar"
        android:background="@drawable/button_style"
        android:gravity="center"
        android:textColor="#ffffff"
        android:text="@string/adicionar_pergunta_admin" />
    <Button
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:id="@+id/button_preferences"
        android:onClick="button_preferences"
        android:text="@string/preferencias"
        android:background="@drawable/button_style"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/button_adicionar"
        android:layout_alignLeft="@+id/button_atualizar"
        android:layout_alignStart="@+id/button_atualizar" />
    <Button
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:id="@+id/button_menu"
        android:onClick="button_menu"
        android:text="@string/menu"
        android:background="@drawable/button_style"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/button_preferences"
        android:layout_alignLeft="@+id/button_atualizar"
        android:layout_alignStart="@+id/button_atualizar" />


</RelativeLayout>
